CC=cc
CFLAGS=  -Wall -Wextra -Werror -Imlx 

NAME=scop
HEADER=includes/scop.h

SRCS=man/main.c

OBJCTS=$(SRCS:%.c=%.o)

%.o: %.c $(HEADER)
	$(CC) $(CFLAGS) -c $< -o $@

$(NAME) : $(OBJCTS) $(NAME2) $(HEADER)
 
		@$(CC) $(CFLAGS) $(OBJCTS) -o $(NAME) 
		 	@echo "\033[31m░█████╗░\033[31m██╗░░░██╗\033[31m██████╗░  \033[32m██████╗░\033[32m██████╗░"
			@echo "\033[31m██╔══██╗\033[31m██║░░░██║\033[31m██╔══██╗  \033[32m╚════██╗\033[32m██╔══██╗"
			@echo "\033[31m██║░░╚═╝\033[31m██║░░░██║\033[31m██████╦╝  \033[32m░█████╔╝\033[32m██║░░██║"
			@echo "\033[31m██║░░██╗\033[31m██║░░░██║\033[31m██╔══██╗  \033[32m░╚═══██╗\033[32m██║░░██║"
			@echo "\033[31m╚█████╔╝\033[31m╚██████╔╝\033[31m██████╦╝  \033[32m██████╔╝\033[32m██████╔╝"
			@echo "\033[31m░╚════╝░\033[31m░╚═════╝░\033[31m╚═════╝░  \033[32m╚═════╝░\033[32m╚═════╝░"
all:  $(MAKE) -C MLX42/Makefile $(NAME)
	
clean:	
				rm -f $(OBJCTS) 

fclean: clean
				rm -f $(NAME)

re: fclean all 